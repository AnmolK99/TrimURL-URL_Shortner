<!DOCTYPE html>
<html lang="en">
<head>
  <style>
    /* Base Styles */
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color:#e2e8f0;
      color: #333;
      margin: 0;
      padding: 40px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    /* Header Styles */
    h1 {
      color: #2c5282;
      font-size: 2.5rem;
      border-bottom: 3px solid #63b3ed;
      padding-bottom: 10px;
      margin-bottom: 30px;
      text-align: center;
      font-weight: 700;
    }

    /* Form Styles */
    form {
      width: 100%;
      max-width: 400px;
      background-color: white;
      padding: 30px 20px;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(45, 112, 190, 0.15);
      border: 2px solid #63b3ed;
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    label {
      font-size: 1rem;
      font-weight: 600;
      color: #2c5282;
    }

    input[type="text"],
    input[type="password"] {
      padding: 12px;
      font-size: 1rem;
      border: 1px solid #cbd5e0;
      border-radius: 5px;
      width: 100%;
      box-sizing: border-box;
      transition: border-color 0.3s ease;
    }

    input[type="text"]:focus,
    input[type="password"]:focus {
      border-color: #63b3ed;
      outline: none;
    }

    /* Button Styles */
    button {
      padding: 12px;
      font-size: 1rem;
      border-radius: 5px;
      cursor: pointer;
      font-weight: 600;
      transition: background-color 0.3s;
    }

    button[type="submit"] {
      background-color: #63b3ed;
      color: white;
      border: none;
      margin-top: 10px;
    }

    button[type="submit"]:hover {
      background-color: #4299e1;
    }

    .signup-btn {
      background-color: #48bb78;
      color: white;
      border: none;
    }

    .signup-btn:hover {
      background-color: #38a169;
    }

    /* Message Styles */
    .message-box {
      max-width: 400px;
      width: 100%;
      margin-top: 20px;
      padding: 20px;
      border-radius: 8px;
      text-align: center;
      font-size: 1rem;
      box-sizing: border-box;
    }

    .success {
      background-color: #e6fffa;
      border: 2px solid #38b2ac;
      color: #2c7a7b;
    }

    .error {
      background-color: #fef2f2;
      border: 2px solid #e53e3e;
      color: #e53e3e;
    }
  </style>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
</head>
<body>
  <h1>Login</h1>
  <form action="/user/login" method="post">
    <label for="email">Email</label>
    <input type="text" id="email" name="email" required placeholder="Enter your email">
    
    <label for="password">Password</label>
    <input type="password" id="password" name="password" required placeholder="Enter your password">

    <button type="submit">Login</button>
    <button type="button" class="signup-btn" onclick="window.location.href='/user/signup'">Sign Up</button>

    <!-- Success and Error Messages -->
    <% if (typeof loginAttempted !== 'undefined' && loginAttempted && loginSuccess) { %>
      <div class="message-box success">
        <h2 style="margin: 0; font-size: 1.5rem; font-weight: 600;">Login Successful!</h2>
        <p style="margin-top: 10px;">
          Welcome back! You have successfully logged in. You can now access your dashboard and manage your account.
        </p>
      </div>
    <% } else if (typeof loginAttempted !== 'undefined' && loginAttempted && !loginSuccess) { %>
      <div class="message-box error">
        <p><%= loginMessage %></p>
      </div>
    <% } %>
  </form>
</body>
</html>
