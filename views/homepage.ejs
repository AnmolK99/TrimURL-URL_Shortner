<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>URL Analytics</title>
  <style>
    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background-color: #ffffff;
      color: #202123;
      margin: 0;
      padding: 40px;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
    }

    h1 {
      font-size: 2rem;
      font-weight: 600;
      margin-bottom: 1.5rem;
      text-align: center;
      color: #2563eb;
    }

    h2 {
      font-size: 1.5rem;
      font-weight: 500;
      margin-bottom: 1rem;
      color: #1d4ed8;
    }

    h3 {
      font-size: 1.2rem;
      font-weight: 500;
      margin-bottom: 0.8rem;
      color: #1e40af;
    }

    .container {
      width: 100%;
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background-color: #ffffff;
      border-radius: 8px;
      overflow: hidden;
      margin-top: 2rem;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
      border: 1px solid #e5e5e5;
    }

    thead {
      background-color: #2563eb;
    }

    th {
      padding: 1rem;
      text-align: left;
      font-weight: 500;
      color: #ffffff;
      border-bottom: 1px solid #e5e5e5;
    }

    td {
      padding: 1rem;
      color: #202123;
      border-bottom: 1px solid #e5e5e5;
    }

    tr:last-child td {
      border-bottom: none;
    }

    tbody tr:hover {
      background-color: #f8f9fa;
    }

    .empty-state {
      text-align: center;
      padding: 2rem;
      color: #6e6e80;
      background-color: #f8f9fa;
      border-radius: 8px;
      border: 1px solid #e5e5e5;
    }

    .app-title {
      color: #000000;
      font-size: 2rem;
      margin-bottom: 2rem;
      text-align: center;
      font-weight: 600;
      background: linear-gradient(45deg, #000000, #000000, #000000, #000000);
      background-size: 300% 300%;
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      animation: gradient 5s ease infinite;
      transition: all 0.3s ease;
    }

    .app-title:hover {
      background-size: 400% 400%;
      filter: brightness(1.2);
      transform: scale(1.05);
      color: #4169e1; /* Royal Blue */
    }

    @keyframes gradient {
      0% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
      100% {
        background-position: 0% 50%;
      }
    }

    .login-btn {
      position: absolute;
      top: 20px;
      right: 20px;
      padding: 0.75rem 1.5rem;
      background-color: #2563eb;
      color: white;
      border: none;
      border-radius: 4px;
      font-size: 0.9rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .login-btn:hover {
      background-color: #1d4ed8;
    }

    @media (max-width: 768px) {
      body {
        padding: 20px;
      }

      table {
        font-size: 0.9rem;
      }

      th, td {
        padding: 0.75rem;
      }
    }
  </style>
</head>
<body>
  <button class="login-btn" onclick="window.location.href='/user/login'">Login</button>
  <h2 class="app-title">TrimURL</h2>
  <div class="container">
    <h1>URL Analytics Dashboard</h1>

    <% if(urlData && urlData.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>#</th>
            <th>Short URL</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% urlData.forEach((element, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= element.shortId %></td>
            <td><%= element.visitHistory.length %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <div class="empty-state">
        <p>No URLs have been shortened yet. Create your first short URL to get started!</p>
      </div>
    <% } %>
  </div>
</body>
</html>